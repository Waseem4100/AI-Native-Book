# AI-Native Textbook Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=AI-Native Textbook
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Database (Neon Serverless Postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/textbook_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Firebase Authentication
# Download service account JSON from Firebase Console
FIREBASE_CREDENTIALS=firebase_credentials.json

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Vector Database
# For Qdrant Cloud: https://cloud.qdrant.io
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=textbook_chunks

# RAG Settings
RAG_TOP_K=5
RAG_MAX_TOKENS=1024
RAG_TEMPERATURE=0.7

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://ai-native-book.vercel.app"]
